import { defineConfig } from 'vite';
import react from '@vitejs/plugin-react';

// https://vitejs.dev/config/
export default defineConfig({
  plugins: [react()],
  server: {
    proxy: {
      '/api/govmap': {
        target: 'http://localhost:4000',
        changeOrigin: true,
      },
      '/api/nominatim': {
        target: 'https://nominatim.openstreetmap.org',
        changeOrigin: true,
        rewrite: (path) => {
          // Remove /api/nominatim prefix and ensure /search is preserved
          const rewritten = path.replace(/^\/api\/nominatim/, '');
          return rewritten || '/search';
        },
        configure: (proxy, _options) => {
          proxy.on('error', (err, _req, _res) => {
            console.error('Nominatim proxy error:', err);
          });
          proxy.on('proxyReq', (proxyReq, req, _res) => {
            proxyReq.setHeader('User-Agent', 'Coordinates-Geocoding-App/1.0');
          });
        },
      },
      '/api/govmap': {
        configure: (proxy, _options) => {
          proxy.on('error', (err, _req, _res) => {
            console.error('GovMap proxy error:', err);
          });
        },
      },
    },
  },
});
